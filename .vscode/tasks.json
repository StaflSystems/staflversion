{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run lint",
            "type": "shell",
            "command": "sh utils/lint.sh",
            "problemMatcher": [
                {
                    "owner": "flake8",
                    "source": "flake8",
                    "pattern": [
                        {
                            "code": 4,
                            "column": 3,
                            "file": 1,
                            "line": 2,
                            "message": 5,
                            "regexp": "^(.+):(\\d+):(\\d+): (\\w\\d+) (.+)$"
                        }
                    ]
                }
            ]
        },
        {
            "label": "build executable",
            "type": "shell",
            "command": "pyinstaller --clean -y single_exe.spec",
            "problemMatcher": []
        }
    ]
}5